<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResponseProductActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="clip_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/icon_back"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="clickToBack"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Đánh giá chất lượng sản phẩm"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">
            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="65dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:gravity="center|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="280dp"
                            android:layout_height="107dp"
                            android:layout_weight="1"
                            android:src="@drawable/food_dog_001"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtProductName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thức ăn cho mèo trưởng thành Nutrience Original"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mã đơn hàng: "
                                    android:textSize="14sp"
                                    android:textColor="@color/colorGrey"
                                    />
                                <TextView
                                    android:id="@+id/txtOrderId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textSize="14sp"
                                    android:textColor="@color/colorGrey"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày đặt hàng: "
                                    android:textSize="14sp"
                                    android:textColor="@color/colorGrey"
                                    />
                                <TextView
                                    android:id="@+id/txtOrderDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textSize="14sp"
                                    android:textColor="@color/colorGrey"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hãy đánh giá giúp chúng tôi nhé"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:stepSize="1.0"
                        android:rating="0"
                        android:theme="@style/RatingBar" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/edtReasonReturn"
                            style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="134dp"
                            android:background="@drawable/btn_white_stroke_grey"
                            android:hint="Lý do cụ thể (Nếu có)"
                            android:inputType="textMultiLine|textPersonName|textImeMultiLine"
                            android:outlineProvider="none"
                            android:singleLine="false"
                            android:gravity="top|left"
                            android:padding="10dp"
                            />
                        <TextView
                            android:id="@+id/txtErrorMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="*Vui lòng nhập lý do"
                            android:textColor="@color/colorRed"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">
                        <Button
                            android:id="@+id/btnSelectImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white_stroke_grey"
                            android:text="Thêm hình ảnh"
                            android:textColor="@color/colorGrey"
                            android:onClick="clickToAddImage"
                            />
                        <Button
                            android:id="@+id/btnCapture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white_stroke_grey"
                            android:text="Chụp ảnh"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorGrey"
                            android:onClick="clickToCapture"/>
                        <ImageView
                            android:id="@+id/imgReasonReturn"
                            android:layout_width="match_parent"
                            android:layout_height="138dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@+id/scroll_view"
                android:background="@color/colorWhite">
                <Button
                    android:id="@+id/btnReturn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="16dp"
                    android:background="@color/colorAccent"
                    android:text="GỬI ĐÁNH GIÁ"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:onClick="clickToReturn"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>