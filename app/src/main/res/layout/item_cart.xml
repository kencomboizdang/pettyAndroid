<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/food_dog_001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/food_dog_001"
            android:src="@drawable/food_dog_001"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            >
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtCartName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Thức ăn hữu cơ cho chó con vị thịt cừu (7kg)"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/btndelete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_close"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"></ImageView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtCartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.450.000 đ"
                    android:textColor="#F3000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_substract"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_subtract"
                    android:onClick="clickToSubstract"/>

                <TextView
                    android:id="@+id/txtCartQuantity"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="#FAFAFA"
                    android:text="1"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_plus"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>