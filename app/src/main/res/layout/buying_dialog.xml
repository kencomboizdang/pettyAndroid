<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/label_dialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tick"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm đã thêm vào giỏ hàng"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/tick"/>
        <ImageView
            android:id="@+id/icon_dismiss"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_close"
            android:layout_alignParentRight="true"
            android:onClick="ClickToDismiss"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtProductDialogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALALAL"
                android:textAlignment="textStart"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txtProductDialogStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALALAL"
                android:textAlignment="textStart"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorGrey"
               />
            <TextView
                android:id="@+id/txtProductDialogPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingTop="5dp"
                android:text="1.450.000 đ"
                android:textColor="#F3000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_border_yellow"
            android:text="trở về"
            android:textColor="@color/colorGrey"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginRight="10sp"
            android:foreground="?android:attr/selectableItemBackground"/>
        <Button
            android:id="@+id/btn_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow"
            android:text="Xem giỏ hàng"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>


</LinearLayout>