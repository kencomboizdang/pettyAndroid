<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchScreenFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gợi ý tìm kiếm cho bạn"
            android:gravity="fill_vertical"
            android:fontFamily="sans-serif-light"
            android:textColor="#7F7F7F"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:textSize="21dp"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txtHintSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_stroke_grey"
                android:text="Thức ăn"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="#7F7F7F"
                android:fontFamily="sans-serif-light"
                android:onClick="clickToPasteSearch"
                android:textAlignment="center"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/txtHintSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_white_stroke_grey"
                android:text="Bánh thưởng"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAlignment="center"
                android:textColor="#7F7F7F"
                android:fontFamily="sans-serif-light"
                android:onClick="clickToPasteSearch"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/txtHintSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_white_stroke_grey"
                android:text="Xương"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAlignment="center"
                android:textColor="#7F7F7F"
                android:fontFamily="sans-serif-light"
                android:onClick="clickToPasteSearch"
                android:textSize="19dp"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/txtHintSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_stroke_grey"
                android:text="Nước sốt"
                android:textColor="#7F7F7F"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:onClick="clickToPasteSearch"
                android:textAlignment="center"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/txtHintSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_white_stroke_grey"
                android:text="Pate"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAlignment="center"
                android:textColor="#7F7F7F"
                android:fontFamily="sans-serif-light"
                android:onClick="clickToPasteSearch"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/txtHintSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_white_stroke_grey"
                android:text="Vitamin"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAlignment="center"
                android:textColor="#7F7F7F"
                android:fontFamily="sans-serif-light"
                android:onClick="clickToPasteSearch"
                android:textSize="19dp"/>
        </TableRow>
    </LinearLayout>

</FrameLayout>